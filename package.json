{
  "name": "advent-of-code-2021",
  "packageManager": "yarn@3.1.1",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "----------------BUILDING----------------": "",
    "build:clean": "run-s clean build",
    "build:watch:clean": "run-s clean build:watch",
    "build:watch": "run-p copy:watch compile:watch",
    "build": "run-p copy compile",
    "compile:watch": "tsc --watch",
    "compile": "tsc",
    "copy:clean": "run-s clean copy",
    "copy:watch": "copy-and-watch --watch \"src/**/*.txt\" \"dist\"",
    "copy": "copyfiles -u 1 src/**/*.txt dist/",
    "postinstall": "husky install",
    "postpublish": "pinst --enable",
    "prepublishOnly": "pinst --disable",
    "----------------CLEANING----------------": "",
    "clean": "del-cli dist/",
    "----------------HOOKS----------------": "",
    "hook:pre-commit": "yarn lint:fix",
    "----------------LINTING----------------": "",
    "lint:checktypes": "tsc --noEmit",
    "lint:eslint:fix": "eslint --fix .",
    "lint:eslint": "eslint .",
    "lint:fix": "run-p --aggregate-output --print-label lint:eslint:fix lint:prettier:fix lint:checktypes",
    "lint:prettier:fix": "prettier --ignore-unknown --list-different --write .",
    "lint:prettier": "prettier --ignore-unknown --check .",
    "lint": "run-p --continue-on-error --aggregate-output --print-label lint:eslint lint:prettier lint:checktypes",
    "----------------RUNNING----------------": "",
    "dev:watch": "yarn clean && run-p --print-label build:watch compile:watch copy:watch",
    "dev": "nodemon --config bin/nodemon/dev.json",
    "start:clean": "run-s build:clean start",
    "start": "node --experimental-specifier-resolution=node --no-warnings dist/index.js --runAll"
  },
  "devDependencies": {
    "@commitlint/cli": "^15.0.0",
    "@commitlint/config-conventional": "^15.0.0",
    "@sindresorhus/tsconfig": "^2.0.0",
    "@types/lodash": "^4.14.178",
    "chalk": "^5.0.0",
    "copy-and-watch": "^0.1.6",
    "copyfiles": "^2.4.1",
    "del-cli": "^4.0.1",
    "eslint": "^8.5.0",
    "eslint-config-canonical": "^33.0.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-import-resolver-typescript": "^2.5.0",
    "eslint-plugin-import": "^2.25.3",
    "husky": "^7.0.0",
    "jest": "^27.4.5",
    "lodash": "^4.17.21",
    "nodemon": "^2.0.15",
    "npm-run-all": "^4.1.5",
    "pinst": "^2.0.0",
    "prettier": "^2.5.1",
    "ts-node": "^10.4.0",
    "typescript": "^4.9.3"
  }
}
